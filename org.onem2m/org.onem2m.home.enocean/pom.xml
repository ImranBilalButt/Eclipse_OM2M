<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.onem2m</groupId>
		<artifactId>org.onem2m</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>org.onem2m.sdt.home.enocean</artifactId>
	<packaging>bundle</packaging>
	
	<dependencies>

		<dependency>
			<groupId>org.onem2m</groupId>
			<artifactId>org.onem2m.sdt</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>org.onem2m</groupId>
			<artifactId>org.onem2m.sdt.home</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>org.onem2m</groupId>
			<artifactId>org.onem2m.sdt.home.driver</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.service.enocean</artifactId>
			<version>1.0.0</version>
		</dependency>
		
	</dependencies>
	
	<build>
		<plugins>
		
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version> 2.3.7</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<Bundle-Vendor>Orange</Bundle-Vendor>
						<Bundle-Author>Cyrille Bareau</Bundle-Author>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Import-Package>*</Import-Package>
						<Export-Package>org.onem2m.home.enocean</Export-Package>
						<Bundle-Activator>org.onem2m.home.enocean.Activator</Bundle-Activator>
						<!-- Service-Component>OSGI-INF/*.xml</Service-Component-->
					</instructions>
				</configuration>
			</plugin>
			
		</plugins>
	</build>

</project>
